Passar esses comandos para serem executados via ansible depois.

root@linux-prd-01:~# history
apt upgrade
apt-get install -y git curl unzip software-properties-common gnupg
curl -fsSL https://get.docker.com -o get-docker.sh
chmod +x get-docker.sh
./get-docker.sh
cat /etc/passwd
date
timedatectl
docker --version
su - adminfabio
sudo usermod -aG docker adminfabio
Sair do server

docker ps -al
docker container rm db6249da93b6
docker image rm hello-world


curl "https://awscli.amazonaws.com/awscli-exe-linux-x86_64.zip" -o "awscliv2.zip"
unzip awscliv2.zip
sudo ./aws/install
aws --version
curl -sL https://aka.ms/InstallAzureCLIDeb | sudo bash
az version
wget -O - https://apt.releases.hashicorp.com/gpg | sudo gpg --dearmor -o /usr/share/keyrings/hashicorp-archive-keyring.gpg
echo "deb [arch=$(dpkg --print-architecture) signed-by=/usr/share/keyrings/hashicorp-archive-keyring.gpg] https://apt.releases.hashicorp.com $(grep -oP '(?<=UBUNTU_CODENAME=).*' /etc/os-release || lsb_release -cs) main" | sudo tee /etc/apt/sources.list.d/hashicorp.list
sudo apt update && sudo apt install terraform
terraform --version
sudo add-apt-repository --yes --update ppa:ansible/ansible
sudo apt install ansible
ansible --version
KUBECTL_VERSION=$(curl -Ls https://dl.k8s.io/release/stable.txt)
curl -LO "https://dl.k8s.io/release/$KUBECTL_VERSION/bin/linux/amd64/kubectl"
sudo install -o root -g root -m 0755 kubectl /usr/local/bin/kubectl
kubectl version --client
